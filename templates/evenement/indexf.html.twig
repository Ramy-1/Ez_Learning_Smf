{% extends 'basef.html.twig' %}
{% block title %}EZ Learning{% endblock %}
{% block stylesheets %}
    {{parent()}}
{% endblock %}

{% block menu %}
    {{parent()}}
{% endblock %}

{% block body %}
    <h1>Evenement index</h1>

    <div class="intro-section" id="home-section">

        <div class="slide-1" style="background-image: url('{{asset('assets/frontoffice/images/hero_1.jpg')}}');" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4">
                                <h1  data-aos="fade-up" data-aos-delay="100">Evenement</h1>
                                <p class="mb-4"  data-aos="fade-up" data-aos-delay="200">Lorem ipsum dolor sit amet consectetur adipisicing elit. Maxime ipsa nulla sed quis rerum amet natus quas necessitatibus.</p>
                                <p data-aos="fade-up" data-aos-delay="300"><a href="#" class="btn btn-primary py-3 px-5 btn-pill">Consulter</a></p>

                            </div>

                            <div class="col-lg-5 ml-auto" data-aos="fade-up" data-aos-delay="500">
                                <form action="" method="post" class="form-box">
                                    <h3 class="h4 text-black mb-4">Sign Up</h3>
                                    <div class="form-group">
                                        <input type="text" class="form-control" placeholder="Email Addresss">
                                    </div>
                                    <div class="form-group">
                                        <input type="password" class="form-control" placeholder="Password">
                                    </div>
                                    <div class="form-group mb-4">
                                        <input type="password" class="form-control" placeholder="Re-type Password">
                                    </div>
                                    <div class="form-group">
                                        <input type="submit" class="btn btn-primary btn-pill" value="Sign up">
                                    </div>
                                </form>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
    <section class="product bg-white">
        <button type="submit"><a href="top2events">top 2 events</a></button>
        {% for evenement in evenements %}
            <div class="container">
                <div class="row mt-3 mb-4">
                    <div class="col-md-4">

                        <img class="w-100" src="{{ asset('images/'~ evenement.imgev) }}" alt="Image de {{ evenement.imgev }}">
                    </div>
                    <div class="col-md-8">
                        <h1 class="mt-4 mt-md-0">le  {{ evenement.date ? evenement.date|date('m-d') : ''}}</h1>
                        <h2>{{ evenement.nbrParticipant}} participants </h2>
                        <hr>
                        <br>
                        <b class="btn-secondary">Description: </b>{{ evenement.description }}
                    </br>
                        <b>Heure: </b>{{ evenement.heure}}
                        <br>


                        <b>Lien: </b><a href="{{ evenement.lien }}">{{ evenement.lien }}</a>
                    </br>
                    </div>
                </div>
            </div>

        {% endfor %}
    </section>
    <a href="/evenement/listp" class="btn btn-success "> <i class="fas fa-check"> pdf</i> </a>
{% endblock %}
