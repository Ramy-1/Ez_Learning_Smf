							<th>
								<label class="customcheckbox">
									<input type="checkbox" class="listCheckbox"/>
									<span class="checkmark"></span>
								</label>
							</th>
          
            <td>{{ societe.nom}}</td>
            <td>{{ societe.email }}</td>
            <td>{{ societe.adresse }}</td>
            <td>{{ societe.imgsoc }}</td>
            <td>{{ societe.mdpsoc }}</td>
         

            <td><a class="btn btn-warning btn-sm" href="{{ path('updateSociete',{'idsoc':societe.idsoc}) }}">Modifier</a>
            <a class="btn btn-danger btn-sm" href="{{ path('deleteSociete',{'idsoc':societe.idsoc}) }}">Supprimer</a>
            
        </tr>
    {% endfor %}
</table>
