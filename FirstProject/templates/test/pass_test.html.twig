{% extends 'base_front.html.twig' %}
{% block stylesheets %}
    {{parent()}}
{% endblock %}
{% block javascripts %}
    {{parent()}}
{% endblock %}
{% block body %}
{{parent()}}
<div class="intro-section single-cover" id="home-section">
      
      <div class="slide-1 " style="background-image: url('{{asset('images/img_2.jpg')}}');" data-stellar-background-ratio="0.5">
        <div class="container">
          <div class="row align-items-center">
            <div class="col-12">
              <div class="row justify-content-center align-items-center text-center">
                <div class="col-lg-6">
                  <h1 data-aos="fade-up" data-aos-delay="0">{{test.titre}}</h1>
                  <p data-aos="fade-up" data-aos-delay="100">{{test.description|raw}}&bullet;</p>
                </div>

                
              </div>
            </div>
            
          </div>
        </div>
      </div>
    </div>
    <div class="site-section">
      <div class="container">
        <div class="row">
<div class="card" data-select2-id="14">
                <div class="card-body" data-select2-id="13">
                {% for question in questions %}
                  <h5 class="card-title">{{question.contenu}}</h5>
                  <div class="accordion" id="accordionExample">
                        <div class="card mb-0">
                        <div class="card-header" id="headingOne">
                            <h5 class="mb-0">
                            <a class="d-flex align-items-center" data-toggle="collapse" data-target="#collapseOne{{question.id}}" aria-expanded="true" aria-controls="collapseOne">
                                <i class="me-1 mdi mdi-magnet fs-4" aria-hidden="true"></i>
                                <span>Description pour le question {{loop.index}}</span>
                            </a>
                            </h5>

                             {% if question.support != null %}
                    <a href="{{ path('show_test_pdf',{'id':question.id}) }}" target="_blank"  style="font-size:17S px;" role="button" class=" btnc">
                          <i class="fa fa-file"></i>
                          Supporting Document
                        </a>
                     {% endif %}
                        </div>
                        <div id="collapseOne{{question.id}}" class="collapse " aria-labelledby="headingOne" data-parent="#accordionExample">
                            <div class="card-body">
                            {{question.description|raw}}
                            </div>
                        </div>
                        </div>
                  {% if question.type == "seul choix"%}
                  <div class="form-group row">
                    <div class="col-md-9">
                        {% for reponse in question.reponses %}
                      <div class="form-check">
                        <input onchange="insetanwserrad({{reponse.id}},{{reponse.id}})" type="radio" class="form-check-input" id="customControlValidation1" name="radio-stacked{{question.id}}" required="">
                        <label class="form-check-label mb-0" for="customControlValidation1">{{reponse.contenu}}</label>
                      </div>
                        {% endfor %}
                      
                    </div>
                  </div>
                {% else %}
                  <div class="form-group row">
                    
                    <div class="col-md-10">
                    {% for reponse in question.reponses %}
                      <div class="form-check mr-sm-2">
                        <input onclick="insetanwser({{reponse.id}},{{reponse.id}})" type="checkbox" class="form-check-input" id="{{reponse.id}}">
                        <label class="form-check-label mb-0" for="customControlAutosizing1">{{reponse.contenu}}</label>
                      </div>
                    {% endfor %}
                      
                    </div>
                  </div>
                 {% endif %}
                 {% else %} 
                 <h5 class="card-title">pas des questions</h5>
                 {% endfor %}
                </div>
                <div class="border-top">
                  <div class="card-body">
                    <a href="{{path('submit_test',{'testid':test.id})}}" type="button" class="btn btn-primary">
                      Submit
                    </a>
                  </div>
                </div>
              </div>
<script>
   function insetanwser(id,rep)
      {
        var element = document.getElementById(rep).checked;
        if(element==true){
          $.ajax({url: "{{path('question_response')}}",              
              data: "reponseId="+id,         
               });
        }
        else{
          $.ajax({url: "{{path('question_response_remove')}}",              
              data: "reponseId="+id,         
               });
        }
              
              
        }

        function insetanwserrad(id,rep)
      {
        
          $.ajax({url: "{{path('question_response')}}",              
              data: "reponseId="+id,         
               });   
        }
          function finalsbumit(test)
          {
        
          $.ajax({url: "{{path('submit_test',{'testid':test.id})}}",              
                   data: "id="+test,  
               });   
          }
</script>
          
{% endblock %}