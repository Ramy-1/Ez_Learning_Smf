{% block body %}
{{parent()}}
<div class="intro-section single-cover" id="home-section">
      <div class="site-section courses-title" id="courses-section">
				<div class="container">
					<div class="row mb-5 justify-content-center">
						<div class="col-lg-7 text-center aos-init aos-animate" data-aos="fade-up" data-aos-delay="">
							<h2 class="section-title"></h2>
						</div>
					</div>
				</div>
		</div>
	
</div>
     <div class="intro-section" id="home-section">

        <div class="slide-1" style="background-image: url(&quot;/assets/frontoffice/images/hero_1.jpg&quot;); background-position: 50% 68.6094px;" data-stellar-background-ratio="0.5">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-12">
                        <div class="row align-items-center">
                            <div class="col-lg-6 mb-4">
                                <h1 data-aos="fade-up" data-aos-delay="100" class="aos-init aos-animate">S'inscrire</h1>
                                <p class="mb-4 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">Vous n'avez pas un compte? vous pouvez s'inscrire et commencer Ã  etudier facilement.</p>
                                <p data-aos="fade-up" data-aos-delay="300" class="aos-init"><a href="{{path('app_register')}}" class="btn btn-primary py-3 px-5 btn-pill">Register</a></p>

                            </div>

                            <div class="col-lg-5 ml-auto aos-init aos-animate" data-aos="fade-up" data-aos-delay="500">
									
									
									<form action="" method="post" class="form-box">
									{% if error %}
			<div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
			<script>
				$(function () { // Success Type
$("#ts-success").on("click", function () {
toastr.success("Have fun storming the castle!", "Miracle Max Says");
});
});
			</script>

		{% endif %}
		{% if errormsg %}
			<div class="alert alert-danger">{{errormsg}}</div>
		{% endif %}
		{% if app.user %}
			<div class="mb-3">
				You are logged in as
				{{ app.user.username }},
				<a href="{{ path('app_logout') }}">Logout</a>
			</div>
		{% endif %}
									<h3 class="h4 text-black mb-4">Sign In</h3>
									<label for="inputEmail">Email</label>
										<input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email" required autofocus>
										<label for="inputPassword">Password</label>
										<input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password" required>

										<input
										type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
										{# 
											<label>
												<input type="checkbox" name="_remember_me" checked/>
												Keep me logged in
											</label> #}

										<div class="checkbox mb-3">
											<label>
												<input type="checkbox" name="_remember_me">
												Remember me
											</label>
										</div>


										<button class="btn btn-primary btn-pill" type="submit">
											Sign in
										</button>
                                    
                                </form>

                            </div>
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
	
{% endblock %}