{% extends 'backbase.html.twig' %}

{% block title %}List User
{% endblock %}


{% block body %}
	<link href="{{asset('dist/css/style.min.css')}}" rel="stylesheet"/>
	<script src="{{asset('assets/libs/chart/excanvas.min.js')}}"></script>
	<script src="{{asset('dist/js/pages/chart/chart-page-init.js')}}"></script>

	{# {% for o in tabStat %} #}
	{# <li>{{tabStat[i]}}  , {{names[i]}}</li> #}
	<div class="row">
		{% for i in 0..5 %}
			<div class="col-md-3">
				<div class="card mt-0">
					<div class="row">
						<div class="col-md-6">
							<div class="peity_line_neutral left text-center mt-2">
								<span>
									<span style="display: none">12,6,9,23,14,10,17</span>
									<canvas width="50" height="24"></canvas>
								</span>
								<h6>{{"%.2f"|format(tabStat[i]/size*100)}}%</h6>
							</div>
						</div>
						<div class="col-md-6 border-left text-center pt-2">
							<h3 class="mb-0 fw-bold">{{tabStat[i]}}</h3>
							<span class="text-muted">{{names[i]}}</span>
						</div>
					</div>
				</div>
			</div>
		{% endfor %}
	</div>

	<script>
		$("#zero_config").DataTable();
	</script>
	<div class="content">
		<div class="container-fluid">
			<div class="row">
				<div class="col-md-12">
					<div class="card strpied-tabled-with-hover">
						<div class="card-header ">
							<h4 class="card-title">Table User</h4>
							<p class="card-category">All Users</p>
						</div>
						<div class="card-body table-full-width table-responsive">
							<table id="zero_config" class="table table-striped table-bordered">
								<thead>

									<th>email</th>
									<th>nom</th>
									<th>prenom</th>
									<th>role</th>
									{# <th>isVerified</th> #}
									<th></th>
									<th></th>
									<th></th>
								</thead>
								<tbody>
									{% for u in tab %}
										<tr>
											<td>{{u.email}}</td>
											{# <td>{{u.password}}</td> #}
											<td>{{u.name}}</td>
											<td>{{u.lastName}}</td>
											<td>
												{% for arole in u.roles %}
													<li>{{arole}}</li>
												{% endfor %}
											</td>
											{# <td>{{u.isVerified}}</td> #}
											<td>
												<a id="updated" href="{{ path('UserUpdate',{'id':u.id}) }}">Update</a>
												<i class="mdi mdi-account-convert"></td>
											</td>
											<td>
												<a href="{{ path('UserDelete',{'id':u.id}) }}">Delete</a>
												<i class="mdi mdi-account-multiple-minus"></td>
											</td>
											<td>
												<a href="{{ path('UserBlock',{'id':u.id}) }}">
													{% if u.isBlocked() %}
														Un
													{% endif %}
													Block
												</a>
												<i class="mdi mdi-account-alert"></td>
											</td>
										</tr>
									{% endfor %}
								</tbody>
							</div>
						</table>
					</div>
				</div>
			</div>
		</div>
	</div>

	<link href="{{asset('assets/libs/flot/css/float-chart.css')}}" rel="stylesheet" />

