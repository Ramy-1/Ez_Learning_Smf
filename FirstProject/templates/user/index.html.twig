{% extends 'backbase.html.twig' %}

{% block body %}


	<div class="card">
		<div class="card-body">
			<h5 class="card-title">Basic Datatable</h5>
			<div class="table-responsive">
				<table id="zero_config" class="table table-striped table-bordered">
					<thead>
						<tr>
							<th>email</th>
							<th>nom</th>
							<th>prenom</th>
							<th>role</th>
							<th>isVerified</th>
							<th></th>
						</tr>
					</thead>
					<tbody>
						{% for u in tab %}
							<tr>
								<td>{{u.email}}</td>
								{# <td>{{u.password}}</td> #}
								<td>{{u.name}}</td>
								<td>{{u.lastName}}</td>
								<td>
									{% for arole in u.roles %}
										<li>{{arole}}</li>
									{% endfor %}
								</td>
								<td>{{u.isVerified}}</td>
								<td>
									<a href="{{ path('UserUpdate',{'id':u.id}) }}">Update</a>
								</td>
								<td>
									<a href="{{ path('UserDelete',{'id':u.id}) }}">Delete</a>
								</td>
							</tr>
						{% endfor %}
					</tbody>

				</table>
			</div>
		</div>
	</div>
	<script src="../assets/extra-libs/DataTables/datatables.min.js"></script>

	<script>
		/****************************************
		 *       Basic Table                   *
		 ****************************************/
$("#zero_config").DataTable();
	</script>

	<div class="col-md-3 col-sm-12 d-grid">
		<button type="button" class="btn btn-lg btn-outline-success" id="ts-success">
			Success
		</button>
	</div>
	{# //cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js #}

	<link href="../assets/jquery.dataTables.min.css" rel="stylesheet"/>
	<script src="../assets/jquery.dataTables.min.js" rel="stylesheet"/>
	<link href="../assets/libs/datatables.net-bs4/css/dataTables.bootstrap4.css" rel="stylesheet"/>
	<link rel="stylesheet" type="text/css" href="../assets/extra-libs/multicheck/multicheck.css"/>
	<script src="../assets/extra-libs/multicheck/datatable-checkbox-init.js"></script>
	<script src="../assets/libs/jquery/dist/jquery.min.js"></script>
{% endblock %}
