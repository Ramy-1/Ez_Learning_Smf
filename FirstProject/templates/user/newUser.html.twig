{% extends 'backbase.html.twig' %}

{% block body %}

	{{ form_start(UserForm, {'attr': {'novalidate': 'novalidate'}}) }}

	<div class="row">
		<div class="col-md-6">
			<div class="card">
				<form id="form" class="form-horizontal">
					<div class="card-body">
						<h4 class="card-title">Personal Info</h4>
						<div class="form-group row">
							<label for="fname" class="col-sm-3 text-end control-label col-form-label">First Name</label>
							<div class="col-sm-9">
								{{form_widget(UserForm.name)}}
								{{form_errors(UserForm.name)}}
							</div>
						</div>
						<div class="form-group row">
							<label for="lname" class="col-sm-3 text-end control-label col-form-label">Last Name</label>
							<div class="col-sm-9">
								{{form_widget(UserForm.lastName)}}
								{{form_errors(UserForm.lastName)}}
							</div>
						</div>
						<div class="form-group row">
							<label for="lname" class="col-sm-3 text-end control-label col-form-label">Password</label>
							<div class="col-sm-9">
								{{form_widget(UserForm.plainPassword)}}
								{{form_errors(UserForm.plainPassword)}}
							</div>
						</div>
						<div class="form-group row">
							<label for="email1" class="col-sm-3 text-end control-label col-form-label">Email</label>
							<div class="col-sm-9">
								{{form_widget(UserForm.email)}}
								{{form_errors(UserForm.email)}}
							</div>
						</div>

						<div class="form-group row">
							<label for="email1" class="col-sm-3 text-end control-label col-form-label">Roles</label>
							<div class="col-sm-9">
								{{form_widget(UserForm.roles)}}
								{{form_errors(UserForm.roles)}}
							</div>
						</div>

						<div data-toggle="recaptcha" data-sitekey="6LfmDYMfAAAAAJ7BGxjCTSAoF8fLfvMRIXPReZEt"></div>
						{# <div class="form-group row">
																																																																																				<label for="cono1" class="col-sm-3 text-end control-label col-form-label">Contact No</label>
																																																																																				<div class="col-sm-9">
																																																																																					<input{{form_row(UserForm.faceID)}} type="text" class="form-control" id="cono1" placeholder="Contact No Here"/>
																																																																																				</div>
																																																																																			</div> #}

					</div>
					<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
					<div class="border-top">
						<div class="card-body">
							<button type="submit" class="btn btn-primary">
								Submit
							</button>
						</div>
					</div>
				</form>
			</div>
		</div>
	</div>
	{{form_end(UserForm)}}
{% endblock %}
