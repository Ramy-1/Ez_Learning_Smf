                  <div class="card-body">
    
    <div class="card-body">
    <h1 > Universites</h1>
    {#<div class="container my-2">
        <input class="col-10" type="text" name="AfficherClasse" onkeyup="myFunction1()" placeholder="rate search" id="myInput" >
    </div>#}
    <table class="table" id="table"  >
        <thead>
            <tr>
                <th >Iduni</th>

                <th >Nom</th>
                <th >Email</th>
                <th >Adresse</th>
                <th >Imguni</th>
                <th >Mdpuni</th>
                <th >actions</th>
            </tr>
        </thead>
        <tbody>

        <a class="btn btn-primary" href="{{ path('app_universite_new') }}" >Ajouter</a>
        {% for universite in universites |reverse %}
            <tr>
                <td>{{ universite.iduni }}</td>
                <td>{{ universite.nom }}</td>
                <td>{{ universite.email }}</td>
                <td>{{ universite.adresse }}</td>

                <td><img style="width:50%;" class="" src="{{ asset('uploads/'~ universite.imguni) }}" alt="Image de {{ universite.imguni }}">
                <td>{{ universite.mdpuni }}</td>
                <td>
                    <a class="btn btn-success btn-sm text-white" href="{{ path('app_universite_show', {'iduni': universite.iduni}) }}" >Afficher</a>
                    <a href="{{ path('app_universite_edit', {'iduni': universite.iduni}) }}" class="btn btn-warning btn-sm">Modifier</a>


                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="7">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>


        id="mytable"
        function myFunction1() {
            var input, filter, table, tr, td, i,j, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("mytable");
            tr = table.getElementsByTagName("tr");
//   alert(td.length);
            for (i = 0; i < tr.length; i++) {
                td= tr[i].getElementsByTagName("td")[1];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }

            }

        }


    </script>
