{% block body %}

{{parent()}}
    <h1>Evenement </h1>
<div class="container">
    <div class="card-body">
    {#<div class="container my-2">
        <input class="col-10" type="text" name="AfficherClasse" onkeyup="myFunction1()" placeholder="rate search" id="myInput">
    </div>#}
    <table class="table " id="table">
        <thead>
        <tr>
            <th  >Idorg</th>
            <th >Description</th>
            <th >Date</th>
            <th >Photo</th>
            <th>Lien</th>
            <th >Heure</th>
            <th >Nb participants</th>

            <th >actions</th>
        </tr>
        </thead>
        <tbody>

        <a href="{{ path('app_evenement_new') }}" class=" btn btn-primary"  >Ajouter un evenement</a>
        {% for evenement in evenements |reverse %}
            <tr>
                <td>{{ evenement.idorg }}</td>
                <td>{{ evenement.description }}</td>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : ''}}</td>
                <td><img class="w-100" src="{{ asset('uploads/'~ evenement.imgev) }}" alt="Image de {{ evenement.imgev }}">
                </td>

                <td>{{ evenement.lien }}</td>
                <td>{{ evenement.heure }}</td>
                <td>{{ evenement.nbrparticipant }}</td>
                <td>
                    <a href="{{ path('app_evenement_show', {'idevent': evenement.idevent}) }}" class="btn btn-success btn-sm text-white">Afficher</a>
                    <a href="{{ path('app_evenement_edit', {'idevent': evenement.idevent}) }}" class="btn btn-warning btn-sm" >Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <script>


        id="mytable"
        function myFunction1() {
            var input, filter, table, tr, td, i,j, txtValue;
            input = document.getElementById("myInput");
            filter = input.value.toUpperCase();
            table = document.getElementById("mytable");
            tr = table.getElementsByTagName("tr");
//   alert(td.length);
            for (i = 0; i < tr.length; i++) {
                td= tr[i].getElementsByTagName("td")[2];
                if (td) {
                    txtValue = td.textContent || td.innerText;
                    if (txtValue.toUpperCase().indexOf(filter) > -1) {
                        tr[i].style.display = "";
                    } else {
                        tr[i].style.display = "none";
                    }
                }

            }

        }


    </script>
 <script>
